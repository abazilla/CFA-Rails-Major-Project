<p id="notice"><%= notice %></p>

<h1>Curriculums</h1>

<%= link_to 'New Curriculum', new_curriculum_path %>

<%= search_form_for @q do |f| %>

  <%= f.label :title_or_content_or_subject_or_grade_cont, "Search" %>
  <%= f.search_field :title_or_content_or_subject_or_grade_cont %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @curriculums.each do |curriculum| %>
      <tr>
        <td><%= image_tag curriculum.image.url(:thumb) %></td>
        <td><%= curriculum.title %></td>
        <td><%= curriculum.content %></td>
        <td><%= curriculum.user.email %></td>
        <td><%= rating_for curriculum, 'rating', enable_half: true, disable_after_rate: true %></td>
        <td><%= link_to 'Show', curriculum %></td>
        <td><%= link_to 'Edit', edit_curriculum_path(curriculum) %></td>
        <td><%= link_to 'Destroy', curriculum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
