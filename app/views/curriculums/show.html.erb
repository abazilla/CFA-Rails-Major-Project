<p id="notice"><%= notice %></p>

<%= image_tag @curriculum.image.url(:medium) %>

<p>
  <strong>Title:</strong>
  <%= @curriculum.title %>
</p>
<p>
  <strong>Grade:</strong>
  <%= @curriculum.grade %>
</p>
<p>
  <strong>Subject:</strong>
  <%= @curriculum.subject %>
</p>
<figure class="highlight" style="box-shadow: none;"><pre><code class="language-html" data-lang="html">
  <% if @curriculum.subject == 'Agriculture & Food Technology' %>
  <%= render 'partials/AFT' %>
  <% elsif @curriculum.subject == 'Digital Technology' %>
  <%= render 'partials/TM' %>
  <% end %>
</code></pre><button class="copy">Copy</button><button class="expand">Expand</button></figure>

<p>
  <strong>Content:</strong>
  <%= @curriculum.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @curriculum.user.email %>
</p>

<p>
  Rating: <%= rating_for @curriculum, 'rating', enable_half: true, disable_after_rate: true %>
</p>

<p>
  <p>Number of attachments: <%=@curriculum.files.count%></p>

  <% @curriculum.files.each do |file| %>
  <p>
    <%= file.file.filename %><br>
    <a href="<%= asset_path file.url %>" download>Download</a>
  </p>
  <% end %>
</p>
<p>
  <%= link_to 'Edit', edit_curriculum_path(@curriculum) %> |
  <%= link_to 'Back', curriculums_path %>
</p>

<p>
  <%= render 'comments/form', comment: @comment %>
</p>

<p>
  <% @comments.reverse.each do |comment| %>
    <%= link_to comment.user.email, '' %><%= comment.created_at %>
    <br>
    <%= comment.content %>
    <br>
  <% end %>
</p>
