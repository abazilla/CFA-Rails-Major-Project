<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>





<%= render "devise/shared/links" %>

<section class="hero is-fullheight is-dark is-bold">
    <div class="hero-body">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column is-4 is-offset-4">
            <h1 class="title">
              Register an Account
            </h1>
            <div class="box">

              <div class="label">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class: "input" %>
              </div>

              <div class="label">
                <%= f.label :First_name %><br />
                <%= f.text_field :first_name, autofocus: true, class: "input" %>
              </div>

              <div class="label">
                <%= f.label :Last_name %><br />
                <%= f.text_field :last_name, autofocus: true, class: "input" %>
              </div>
              <hr>


              <div class="label">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "input" %>
              </div>

              <div class="label">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
              </div>
              <hr>

              <div class="control">
                <%= f.submit "Sign up", class: "button is-primary" %>
              </div>
            </div>
            <p class="has-text-centered">
              <%= render "devise/shared/links" %>

            </p>
          </div>
        </div>
      </div>
    </div>

  </section>
  <% end %>
