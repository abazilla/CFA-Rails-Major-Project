<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :name_or_location_cont %>
  <%= f.search_field :name_or_location_cont %>

  <% end %>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Location</th>
      <th>Grade low</th>
      <th>Grade high</th>
      <th>User</th>
      <th>Teachers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= image_tag school.image.url(:thumb) %></td>
        <td><%= school.name %></td>
        <td><%= school.location %></td>
        <td><%= school.grade_low %></td>
        <td><%= school.grade_high %></td>
        <td><%= school.user.email %></td>
        <td><%= school.teachers.count %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
